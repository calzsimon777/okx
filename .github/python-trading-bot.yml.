name: Run Python Trading Bot

# Trigger the workflow on push or pull request to the main branch
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  run-bot:
    runs-on: ubuntu-latest  # Specifies the environment to run the script (Ubuntu in this case)

    steps:
      # Step 1: Check out the repository
      - name: Checkout Repository
        uses: actions/checkout@v2  # This action checks out your code from GitHub

      # Step 2: Set up Python (we're using Python 3.8 as an example)
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      # Step 3: Install dependencies from requirements.txt
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt  # Make sure you have a requirements.txt with necessary packages

      # Step 4: Run the Python script (the trading bot script in this case)
      - name: Run Trading Bot
        run: |
          nohup python3 trade.py > bot_log.log 2>&1 &  # Adjusted to run trade.py

      # Step 5: Upload logs if needed
      - name: Upload bot logs
        uses: actions/upload-artifact@v2
        with:
          name: bot-log
          path: bot_log.log  # Path to your log file

